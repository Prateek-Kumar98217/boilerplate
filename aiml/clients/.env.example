# ── Gemini ────────────────────────────────────────────────────────────────
# Comma-separated list for key rotation: KEY1,KEY2,KEY3
GEMINI_API_KEYS=
GEMINI_DEFAULT_MODEL=gemini-2.0-flash
GEMINI_VISION_MODEL=gemini-2.0-flash
GEMINI_EMBEDDING_MODEL=text-embedding-004
GEMINI_RPM_LIMIT=15           # requests per minute per key (free tier)
GEMINI_RPD_LIMIT=1500         # requests per day per key

# ── Groq ──────────────────────────────────────────────────────────────────
GROQ_API_KEYS=
GROQ_DEFAULT_MODEL=llama-3.3-70b-versatile
GROQ_WHISPER_MODEL=whisper-large-v3-turbo
GROQ_RPM_LIMIT=30
GROQ_TPM_LIMIT=131072         # tokens per minute

# ── Cerebras ──────────────────────────────────────────────────────────────
CEREBRAS_API_KEYS=
CEREBRAS_DEFAULT_MODEL=llama3.1-70b
CEREBRAS_RPM_LIMIT=30

# ── Memory ────────────────────────────────────────────────────────────────
MEMORY_SHORT_TERM_TURNS=20    # recent messages kept verbatim
MEMORY_MAX_SHORT_TOKENS=4096  # char-based soft cap for short-term window
MEMORY_SUMMARY_MODEL=         # provider:model — e.g. "groq:llama-3.1-8b-instant"
                               # leave blank to reuse the active client's model

# ── Prompt Templates ──────────────────────────────────────────────────────
DEFAULT_SYSTEM_PROMPT=You are a helpful, accurate, and concise AI assistant.
